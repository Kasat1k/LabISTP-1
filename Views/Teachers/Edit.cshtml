@model ISTPLab.Models.Teacher

@{
    ViewData["Title"] = "Edit";
}

<h1>Зміна інформації про викладача @Model?.Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label"></label>
                <select asp-for="Faculty" class="form-control" asp-items="ViewBag.Faculty"></select>
                <span asp-validation-for="Faculty" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" style="margin-right: 20px;" />
                <br />
                <br />
                <a asp-action="Index" class="btn btn-primary" style="margin-right: 20px;">Повернутись назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ISTPLab.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання нового студента</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupSt" class="control-label"></label>
                <select asp-for="GroupSt" class ="form-control" asp-items="ViewBag.GroupSt"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" style="margin-right: 20px;" /> 
                <br />
                <br />
                <a asp-action="Index" class="btn btn-primary" style="margin-right: 20px;">Повернутись</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

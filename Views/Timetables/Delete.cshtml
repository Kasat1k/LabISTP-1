@model ISTPLab.Models.Timetable

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення пари </h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuditoryNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuditoryNavigation.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GroupTtNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupTtNavigation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectNavigation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeacherNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherNavigation.Name)
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>
    <br/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-primary" style="margin-right: 20px;"  /> 
        <a asp-action="Index" class="btn btn-primary" style="margin-right: 20px;">Повернутись</a>
    </form>
</div>

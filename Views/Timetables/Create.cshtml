@model ISTPLab.Models.Timetable

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання нової пари </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <select asp-for="Subject" class ="form-control" asp-items="ViewBag.Subject"></select>
            </div>
            <div class="form-group">
                <label asp-for="Auditory" class="control-label"></label>
                <select asp-for="Auditory" class ="form-control" asp-items="ViewBag.Auditory"></select>
            </div>
            <div class="form-group">
                <label asp-for="GroupTt" class="control-label"></label>
                <select asp-for="GroupTt" class ="form-control" asp-items="ViewBag.GroupTt"></select>
            </div>
            <div class="form-group">
                <label asp-for="Teacher" class="control-label"></label>
                <select asp-for="Teacher" class ="form-control" asp-items="ViewBag.Teacher"></select>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" style="margin-right: 20px;" />
                <br />
                <br />
                <a asp-action="Index" class="btn btn-primary">Повернутись назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

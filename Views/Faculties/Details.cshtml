@model ISTPLab.Models.Faculty

@{
    ViewData["Title"] = "Details";
}


<h1>Інформація про @Model?.Name</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" style="margin-right: 20px;">Редагувати </a>
    <a asp-action="Index" class="btn btn-primary" style="margin-right: 20px;">Факультети</a>
    <a asp-action="IndexFaculty" asp-controller="Groups" asp-route-id="@Model.Id" class="btn btn-primary" style="margin-right: 20px;">Групи факультету</a>

</div>

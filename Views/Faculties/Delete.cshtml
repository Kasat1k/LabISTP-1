@model ISTPLab.Models.Faculty

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення факультет @Model?.Name</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    

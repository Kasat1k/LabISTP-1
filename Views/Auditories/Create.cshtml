@model ISTPLab.Models.Auditory

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання нової аудиторії</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Floor" class="control-label"></label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label"></label>
                <select asp-for="Faculty" class ="form-control" asp-items="ViewBag.Faculty"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" style="margin-right: 20px;" />
                <br />
                <br />
                <a asp-action="Index" class="btn btn-primary" style="margin-right: 20px;">Повернутись</a>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

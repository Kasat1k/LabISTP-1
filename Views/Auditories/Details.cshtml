@model ISTPLab.Models.Auditory

@{
    ViewData["Title"] = "Details";
}

<h1>Інформація про аудиторію @Model?.Number</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacultyNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacultyNavigation.Name)
        </dd>
    </dl>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" style="margin-right: 20px;">Змінити інформацію про @Model?.Number</a> 
    <a asp-action="Index" class="btn btn-primary" class="btn btn-primary">Повернутись</a>
</div>
